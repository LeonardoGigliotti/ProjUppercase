@model ProjetoUppercase.Models.Carro

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />

<h1>Detalhes</h1>

<div>
    <hr />
    <dl class="row">
        <div>
        <dt class="col-sm-2">
            <h>Imagem do Carro</h>
        </dt>
        <dd class="col-sm-10">
        @if (@Model.ImagemCarroBase64 != null)
            {
                <img class="carro" src="data:image;base64,@Model.ImagemCarroBase64" alt="ImagemCarro">
            }
        else
            {
             <h6><img src="~/img/imgnao.png"> </h6>
             }
        </dd>   
        </div>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a> 
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
